{
  "name": "johnnymoses.com",
  "private": true,
  "description": "The website of Native American storyteller Johnny Moses",
  "scripts": {
    "build": "lerna run build --parallel",
    "build:studio": "(cd packages/studio && npm run build)",
    "build:web": "lerna bootstrap && (cd packages/studio && SANITY_AUTH_TOKEN=$SANITY_DEPLOY_STUDIO_TOKEN npm run graphql-deploy) && (cd packages/web && npm run build)",
    "develop": "lerna run dev --parallel",
    "format": "lerna run format --parallel",
    "graphql-deploy": "lerna run graphql-deploy",
    "postinstall": "lerna bootstrap"
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "lerna": "^3.22.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cwgw/johnnymoses.com.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lerna run --concurrency 1 --stream precommit --since HEAD --exclude-dependents"
    }
  }
}
